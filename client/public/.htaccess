# =================================================================
# .htaccess complet pour SPA React/Vite
# =================================================================

# Activer le moteur de reecriture
RewriteEngine On

# =================================================================
# HTTPS - Forcer la connexion securisee (decommenter en production)
# =================================================================
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =================================================================
# WWW - Rediriger vers version sans www (ou l'inverse selon preference)
# =================================================================
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# =================================================================
# SPA ROUTING - Redirige toutes les requetes vers index.html
# sauf les fichiers et dossiers existants
# =================================================================
RewriteBase /

# Ne pas reecrire les fichiers existants
RewriteCond %{REQUEST_FILENAME} !-f

# Ne pas reecrire les dossiers existants
RewriteCond %{REQUEST_FILENAME} !-d

# Exclure les fichiers statiques (assets)
RewriteCond %{REQUEST_URI} !^/assets/
RewriteCond %{REQUEST_URI} !^/images/
RewriteCond %{REQUEST_URI} !^/fonts/
RewriteCond %{REQUEST_URI} !^/favicon\.ico$
RewriteCond %{REQUEST_URI} !^/robots\.txt$
RewriteCond %{REQUEST_URI} !^/sitemap\.xml$

# Rediriger vers index.html pour le routing SPA
RewriteRule ^(.*)$ /index.html [L,QSA]

# =================================================================
# TYPES MIME
# =================================================================
<IfModule mod_mime.c>
    AddType application/javascript .js .mjs
    AddType application/json .json
    AddType text/css .css
    AddType text/html .html .htm
    AddType image/svg+xml .svg .svgz
    AddType image/webp .webp
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
</IfModule>

# =================================================================
# COMPRESSION GZIP
# =================================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# =================================================================
# CACHE CONTROL - Optimisation des performances
# =================================================================
<IfModule mod_expires.c>
    ExpiresActive On

    # HTML - pas de cache (pour SPA routing)
    ExpiresByType text/html "access plus 0 seconds"

    # CSS et JavaScript - cache 1 an (les fichiers sont versionnes par Vite)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"

    # Images - cache 1 mois
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 month"

    # Polices - cache 1 an
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # Autres
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType application/xml "access plus 0 seconds"
</IfModule>

# Headers de cache supplementaires
<IfModule mod_headers.c>
    # HTML - ne pas mettre en cache
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>

    # Assets statiques - cache longue duree
    <FilesMatch "\.(css|js|mjs)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Images
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>

    # Polices
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# =================================================================
# SECURITE - Headers de protection
# =================================================================
<IfModule mod_headers.c>
    # Protection XSS
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Permissions Policy (anciennement Feature-Policy)
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

    # HSTS - Forcer HTTPS (decommenter en production avec SSL)
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# =================================================================
# PROTECTION DES FICHIERS SENSIBLES
# =================================================================
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

<FilesMatch "\.(env|log|sql|bak|config|ini|sh)$">
    Require all denied
</FilesMatch>

# Bloquer l'acces aux fichiers de configuration
<FilesMatch "(package\.json|package-lock\.json|tsconfig\.json|vite\.config\.)">
    Require all denied
</FilesMatch>

# =================================================================
# CORS - Cross-Origin Resource Sharing (si necessaire)
# =================================================================
<IfModule mod_headers.c>
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font\.css|css|js|json|svg)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# =================================================================
# PREVENTION DU DIRECTORY LISTING
# =================================================================
Options -Indexes

# =================================================================
# ENCODAGE UTF-8
# =================================================================
AddDefaultCharset UTF-8
<IfModule mod_mime.c>
    AddCharset UTF-8 .html .css .js .json .xml .svg
</IfModule>

# =================================================================
# ERREURS PERSONNALISEES (optionnel - le SPA gere les 404)
# =================================================================
# Note: Pour une SPA, les erreurs 404 sont gerees par le routing React
# Ces directives sont optionnelles car toutes les requetes sont
# redirigees vers index.html qui affiche la page 404 appropriee

# ErrorDocument 400 /index.html
# ErrorDocument 401 /index.html
# ErrorDocument 403 /index.html
# ErrorDocument 404 /index.html
# ErrorDocument 500 /index.html
